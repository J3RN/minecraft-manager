#!/usr/bin/env ruby
require 'pathname'
require 'redis'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   system "cp config/database.yml.sample config/database.yml"
  # end

  puts "\n== Preparing database =="
  system "bin/rake db:setup"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Restarting application server =="
  system "touch tmp/restart.txt"

  if !ENV["DO_TOKEN"]
    puts "You need to set your DigitalOcean access token!"
    exit 1
  end

  redis = Redis.new()

  puts "What is your current server's ID?"
  server_id = gets.chomp
  redis.set('minecraft_id', server_id)

  puts "What is the ID of the image you would like to use?"
  image_id = gets.chomp
  redis.set('minecraft_image_id', image_id)

  puts "What is the floating IP that you would like to use?"
  floating_ip = gets.chomp
  redis.set('minecraft_floating_ip', floating_ip)
end
