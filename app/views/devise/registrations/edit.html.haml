.col-sm-offset-2.col-sm-8
  .page-header
    %h2
      Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', method: :put }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :username, class: label_classes
      .col-sm-10
        = f.text_field :username, autofocus: true, class: 'form_control'
    .form-group
      = f.label :email, class: label_classes
      .col-sm-10
        = f.email_field :email, autofocus: true, class: 'form_control'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form-group
      = f.label :access_token, class: label_classes
      .col-sm-10
        = f.text_field :access_token, class: 'form_control'
    .form-group
      = f.label :current_password, class: label_classes
      %i (we need your current password to confirm your changes)
      .col-sm-10
        = f.password_field :current_password, autocomplete: "off", class: 'form_control'
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Update", class: submit_classes
  .page-header
    %h3 Cancel my account
  .col-sm-2
    Unhappy?
  .col-sm-10
    #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: ['btn', 'btn-danger']}
