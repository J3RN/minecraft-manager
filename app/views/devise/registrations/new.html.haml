.col-md-offset-2.col-md-8
  .page-header
    %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    = devise_error_messages!
    .form-group
      = f.label :username, class: label_classes
      .col-sm-10
        = f.text_field :username, autofocus: true, class: 'form-control'
    .form-group
      = f.label :email, class: label_classes
      .col-sm-10
        = f.email_field :email, class: 'form-control'
    .form-group
      = f.label :access_token, "Access token (Optional)", class: label_classes
      .col-sm-10
        = f.text_field :access_token, class: 'form-control'
    .form-group
      = f.label :password, class: label_classes
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      .col-sm-10
        = f.password_field :password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :password_confirmation, class: label_classes
      .col-sm-10
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Sign up", { class: submit_classes }
        = render "devise/shared/links"
