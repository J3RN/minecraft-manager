= form_for @phoenix do |f|
  - if @phoenix.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phoenix.errors.count, "error")} prohibited this phoenix from being saved:"
      %ul
        - @phoenix.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :droplet_id, "Droplet ID (Optional)"
    = f.number_field :droplet_id
  .field
    = f.label :image_id
    = f.number_field :image_id
  .field
    = f.label :floating_ip, "Floating IP (Optional)"
    = f.text_field :floating_ip
  .field
    = f.label :ssh_key_id, "SSH Key ID (Optional)"
    = f.number_field :ssh_key_id
  .actions
    = f.submit 'Save'
